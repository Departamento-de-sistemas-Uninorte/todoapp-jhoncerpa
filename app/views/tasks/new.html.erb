<h1>Add new task</h1>

<%= form_with(model: Task, local: true) do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    

    <div>
        <%= form.label :description %>
        <%= form.text_field :description %>
    </div>

    <%= form.submit "Submit" %>
<% end %>

<%= link_to 'View all tasks', tasks_path %>